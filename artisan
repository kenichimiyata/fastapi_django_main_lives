        """
        # Implement your logic here
        return None
    
    async def create(self, data: Dict[str, Any]) -> Dict[str, Any]:
        """
        Create new {name.lower()}
        """
        # Implement your logic here
        return {{"message": "{name} created successfully"}}
    

def main():
    """Artisanãƒ¡ã‚¤ãƒ³é–¢æ•°"""
    
    parser = argparse.ArgumentParser(description="ğŸ¨ Artisan - Laravelé¢¨ã‚³ãƒãƒ³ãƒ‰ãƒ©ã‚¤ãƒ³ãƒ„ãƒ¼ãƒ«")
    subparsers = parser.add_subparsers(dest='command', help='Available commands')
    
    # make:controller
    controller_parser = subparsers.add_parser('make:controller', help='Create a new controller')
    controller_parser.add_argument('name', help='Controller name')
    
    # make:model
    model_parser = subparsers.add_parser('make:model', help='Create a new model')
    model_parser.add_argument('name', help='Model name')
    
    # make:service  
    service_parser = subparsers.add_parser('make:service', help='Create a new service')
    service_parser.add_argument('name', help='Service name')
    
    # serve
    serve_parser = subparsers.add_parser('serve', help='Start development server')
    serve_parser.add_argument('--port', type=int, default=8000, help='Port number')
    serve_parser.add_argument('--host', default="0.0.0.0", help='Host address')
    
    # route:list
    subparsers.add_parser('route:list', help='List all registered routes')
    
    # make:hybrid
    hybrid_parser = subparsers.add_parser('make:hybrid', help='Create a new hybrid controller (Django + FastAPI + Gradio)')
    hybrid_parser.add_argument('name', help='Controller name')
    hybrid_parser.add_argument('--type', choices=['hybrid', 'api', 'web', 'gradio'], 
                              default='hybrid', help='Controller type')
    
    # project:info
    subparsers.add_parser('project:info', help='Display project information')
    
    args = parser.parse_args()
    
    if not args.command:
        parser.print_help()
        return
    
    # ã‚³ãƒãƒ³ãƒ‰å®Ÿè¡Œ
    try:
        if args.command == 'make:controller':
            cmd = MakeControllerCommand()
            cmd.handle(args.name)
        elif args.command == 'make:model':
            cmd = MakeModelCommand()
            cmd.handle(args.name)
        elif args.command == 'make:service':
            cmd = MakeServiceCommand()
            cmd.handle(args.name)
        elif args.command == 'serve':
            cmd = ServeCommand()
            cmd.handle(port=args.port, host=args.host)
        elif args.command == 'route:list':
            cmd = ListRoutesCommand()
            cmd.handle()
        elif args.command == 'make:hybrid':
            cmd = MakeHybridControllerCommand()
            cmd.handle(args.name, args.type)
        elif args.command == 'project:info':
            cmd = ProjectInfoCommand()
            cmd.handle()
        else:
            print(f"âŒ Unknown command: {args.command}")
            
    except Exception as e:
        print(f"âŒ Error executing command: {e}")

if __name__ == "__main__":
    main()

MAIL_PASSWORD=
'''
        with open(self.project_root / ".env.example", "w") as f:
            f.write(content)
        print("âœ… Created .env.example")
    
    def _create_requirements_txt(self):
        """requirements.txtã‚’ä½œæˆ"""
        content = '''fastapi>=0.104.0
uvicorn[standard]>=0.24.0
python-multipart>=0.0.6
